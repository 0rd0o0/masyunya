    <body bgcolor="#000"
          background="https://2.downloader.disk.yandex.ru/preview/bde28b1dbebe0bb8e90c501b8142caa49dff8e6587d64898bbe71e780afd1877/inf/PpSayH6p11iZb6prGHdQ2VMGrwiUI7uLoWIKwjWx8wEHu5xMt2szmHJzWs3sdavHTWe_H9XzvSbArh5TtuOwXA%3D%3D?uid=264004906&filename=МАСЮНЯФОН3.png&disposition=inline&hash=&limit=0&content_type=image%2Fpng&owner_uid=264004906&tknv=v2&size=1898x937">
    </body>

    <input type="number" name="firstNumber" value="0" style="background-color: #DA70D6; border-color: black; border-style: solid;" />
    <select name="operation" style="background-color: #DA70D6; border-color: black; border-style: solid;">
        @for (int i = 0; i < ViewBag.Operation.Length; i++)
        {
            <option value="@ViewBag.Operation[i].Value">
                @ViewBag.Operation[i].Text
            </option>
        }
    </select>
    <input type="number" name="secondNumber" value="0" style="background-color: #DA70D6; border-color: black; border-style: solid;" />
    <input type="submit" value="вычислить" style="background-color: #DA70D6; border-color: black; border-style: solid;"/>
    <div style="background-color: #DA70D6; border-color: black; border-style: solid;">
        Ответ: @ViewBag.Result
    </div>

}